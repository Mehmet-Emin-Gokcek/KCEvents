@using KCEvents.Models
@model List<Tag>

<h1>All Tags</h1>

<div class="col-md-4">

    @if (Model.Count == 0)
    {
        <h2 style="color:red">No Tag yet!</h2>

        <a class="btn btn-primary mb-2" asp-controller="Tag" asp-action="Add">Add Tag </a>
    }
    
    else
    {
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var tag in Model)
            {
                <tr>
                    <th scope="row">@tag.Id</th>
                    <td><a asp-controller="Tag" asp-action="Detail" asp-route-id="@tag.Id">@tag.Name</a></td>
                </tr>
            }

        </tbody>
    </table>
    }
    </div>